// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Service {
  // RECOMMENDED: Using MongoDB's native ObjectId for better performance and compatibility.
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  title       String
  
  // FIXED: A unique field must not be optional.
  slug        String   @unique
  
  description String
  image       String?
}