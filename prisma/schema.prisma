// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Service {
  id          String   @id @map("_id") @default(cuid())
  title       String
  slug        String   @unique // Add this field
  description String
  image       String?
}