// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma
model Service {
  id          String   @id @map("_id") @default(cuid())
  title       String
  slug        String   @unique // Make it non-nullable and unique again
  description String
  image       String?
}