generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  icon        String
  slug        String   @unique
  features    String[]
  createdAt   DateTime @default(now())
}

model Blog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  image     String
  author    String
  category  String
  readTime  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}